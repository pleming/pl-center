<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/"/>
            <mvc:mapping path="/users/signout"/>
            <mvc:mapping path="/student/**"/>
            <mvc:mapping path="/worker/**"/>
            <mvc:mapping path="/assistant/**"/>
            <mvc:mapping path="/prof/**"/>
            <mvc:mapping path="/admin/**"/>
            <bean class="org.computerized.pl.interceptor.SessionCheckInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/student/**"/>
            <bean class="org.computerized.pl.interceptor.StudentIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/worker/**"/>
            <bean class="org.computerized.pl.interceptor.WorkerIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/assistant/**"/>
            <bean class="org.computerized.pl.interceptor.AssistantIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/prof/**"/>
            <bean class="org.computerized.pl.interceptor.ProfIntercepter"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <bean class="org.computerized.pl.interceptor.AdminIntercepter"/>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>
