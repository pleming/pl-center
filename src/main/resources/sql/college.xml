<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="college">
    <select id="loadCollege" resultType="org.computerized.pl.model.CollegeVO">
        SELECT * FROM college
    </select>

    <insert id="addCollege">
        INSERT INTO
			college(college)
        VALUES
        	(#{collegeName})
    </insert>

    <delete id="delCollege">
        DELETE FROM college
        WHERE id IN
        <foreach item="item" index="index" collection="collegeList" open="(" separator="," close=")">
            ${item}
        </foreach>
    </delete>
</mapper>